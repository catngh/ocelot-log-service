{
  "family": "ocelot-log-api",
  "networkMode": "bridge",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "ocelot-log-api",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/ocelot-log-api:latest",
      "essential": true,
      "memory": 1024,
      "cpu": 512,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MONGODB_URL",
          "value": "mongodb://mongodb:27017"
        },
        {
          "name": "MONGODB_DB_NAME",
          "value": "ocelot_logs"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "AWS_REGION", 
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/ocelot/SECRET_KEY"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/ocelot/AWS_ACCESS_KEY_ID"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/ocelot/AWS_SECRET_ACCESS_KEY"
        },
        {
          "name": "SQS_QUEUE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/ocelot/SQS_QUEUE_URL"
        },
        {
          "name": "OPENSEARCH_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/ocelot/OPENSEARCH_URL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ocelot-log-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ],
  "placementConstraints": [
    {
      "type": "memberOf",
      "expression": "attribute:ecs.availability-zone=us-east-1a"
    }
  ]
} 