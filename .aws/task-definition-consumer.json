{
  "family": "ocelot-log-consumer-service",
  "containerDefinitions": [
    {
      "name": "ocelot-log-consumer",
      "image": "601836273503.dkr.ecr.us-east-1.amazonaws.com/ocelot-consumer-repository:latest",
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:601836273503:parameter/ocelot/MONGODB_URL"
        },
        {
          "name": "SQS_QUEUE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:601836273503:parameter/ocelot/SQS_QUEUE_URL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ocelot-log-consumer",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "EC2"
  ],
  "memory": "512",
  "cpu": "256",
  "executionRoleArn": "arn:aws:iam::601836273503:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::601836273503:role/ecsTaskExecutionRole",
  "networkMode": "bridge"
}
